            (#{userAccount},#{userPwd},#{userName},#{userSex},#{userAge},#{userPhone},
             #{userWorkphone},#{userJob},#{userMail},#{userAddressProvince},#{userAddressCity},#{userAddressArea},#{userAddressDetail},#{userQq},#{userWechat},
