    <insert id="addMenuInfo" parameterType="com.group.sh.smarthome.entity.TblMenu" useGeneratedKeys="true" keyProperty="menuId">
        insert into
            tbl_menu(MENU_NAME,MENU_URL,MENU_TYPE,MENUSUB_ID,MENU_LEVEL,
